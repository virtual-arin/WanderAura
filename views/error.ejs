<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="alert alert-danger col-6 offset-3" role="alert">
    <h4 class="alert-heading">
      Error: <%= err.statusCode %> -
      <br />
      <%= err.message %>
    </h4>
    <% if (process.env.NODE_ENV !== "production") { %>
    <p><%= err.stack %></p>
    <% } %>
  </div>
</div>
