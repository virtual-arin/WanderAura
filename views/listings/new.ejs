<% layout("layouts/boilerplate") -%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="Enter a catchy title"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">You must add a title to proceed.
        </div>
        <div class="valid-feedback">Title looks good!</div>
      </div>

      <div class="mt-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please add a short description to proceed.
      </div>

      <div class="mt-3">
        <label for="image" class="form-label">Image Link</label>
        <input
          name="listing[image]"
          placeholder="Enter image URL/Link"
          type="text"
          class="form-control"
        />
      </div>

      <div class="row">
        <div class="mt-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            placeholder="Enter price"
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">You must add a price to proceed.
          </div>
        </div>

        <div class="mt-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            placeholder="Enter country"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">You must add a country to proceed.
          </div>
        </div>
      </div>

      <div class="mt-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="Enter location"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">You must add a location to proceed.
        </div>
      </div>

      <button class="btn btn-dark add-btn mt-3 mb-3">Add</button>
    </form>
  </div>
</div>
