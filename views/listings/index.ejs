<% layout("layouts/boilerplate") -%>

<div class="filters-container">
  <div class="slide-btn-left">
    <i class="fa-solid fa-chevron-left"></i>
  </div>
  <div id="filters">
    <% for(let cat of categories) { %>
    <a href="/listings?category=<%= cat.name %>" class="filter-link">
      <div class="filter <%= category === cat.name ? 'active-filter' : '' %>">
        <div><i class="<%= cat.icon %>"></i></div>
        <p><%= cat.name %></p>
      </div>
    </a>
    <% } %>
  </div>
  <div class="slide-btn-right">
    <i class="fa-solid fa-chevron-right"></i>
  </div>
  <div class="filter-actions">
    <% if (category) { %>
    <div class="clear-filter-container">
      <a href="/listings" class="btn btn-dark clear-filter-btn">Clear Filter</a>
    </div>
    <% } %>
    <div class="all-filters-btn">
      <button
        type="button"
        class="btn btn-outline-dark"
        data-bs-toggle="modal"
        data-bs-target="#filtersModal"
      >
        <i class="fa-solid fa-filter"></i> Filters
      </button>
    </div>
  </div>
</div>

<% if(allListings && allListings.length > 0) { %>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mb-3">
  <% for(let listing of allListings){ %>
  <div class="col mb-4">
    <a
      href="/listings/<%= listing._id %>"
      class="listing-link text-decoration-none"
    >
      <div class="card listing-card h-100">
        <div class="card-img-container">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="listing_image"
          />
          <div class="card-img-overlay"></div>
        </div>
        <div class="card-body">
          <h5 class="card-title mb-2"><%= listing.title %></h5>
          <p class="card-text text-muted mb-2">
            <%= listing.location %>, <%= listing.country %>
          </p>
          <p class="card-text">
            <b>&#8377; <%= listing.price.toLocaleString("en-IN") %></b> / night
          </p>
        </div>
      </div>
    </a>
  </div>
  <% } %>
</div>
<% } else { %>
<div class="row">
  <div class="col-12 text-center mt-5">
    <h3>No listings found for this category.</h3>
    <p>Try clearing the filter or exploring other categories.</p>
  </div>
</div>
<% } %>

<!-- Filters Modal -->
<div
  class="modal fade"
  id="filtersModal"
  tabindex="-1"
  aria-labelledby="filtersModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="filtersModalLabel">Filters</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="modal-filters">
          <% for(let cat of categories) { %>
          <a
            href="/listings?category=<%= cat.name %>"
            class="modal-filter-link"
          >
            <i class="<%= cat.icon %>"></i> <%= cat.name %>
          </a>
          <% } %>
        </div>
      </div>
      <div class="modal-footer">
        <% if (category) { %>
        <a href="/listings" class="btn btn-dark">Clear Filter</a>
        <% } %>
      </div>
    </div>
  </div>
</div>
