<% layout("layouts/boilerplate") -%>

<h3 class="mt-3">All Listings</h3>
<!-- <form method="get" action="/listings/new">
    <button>Create New Listing</button>
  </form> -->

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mb-3">
  <% for(let listing of allListings){ %>
  <div class="col">
    <a
      href="/listings/<%= listing._id %>"
      class="listing-link text-decoration-none"
    >
      <div class="card listing-card h-100">
        <div class="card-img-container">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="listing_image"
          />
          <div class="card-img-overlay"></div>
        </div>
        <div class="card-body">
          <h5 class="card-title mb-2"><%= listing.title %></h5>
          <p class="card-text text-muted mb-2">
            <%= listing.location %>, <%= listing.country %>
          </p>
          <p class="card-text">
            <b>&#8377; <%= listing.price.toLocaleString("en-IN") %></b> / night
          </p>
        </div>
      </div>
    </a>
  </div>
  <% } %>
</div>
